{
    "manifest_version": 2,
    "name": "Force Dark Mode CSS",
    "version": "1.0",
    "description": "Modifies stylesheet responses to force dark mode at request level.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
